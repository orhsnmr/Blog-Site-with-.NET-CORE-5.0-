@model  EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesag Detay Sayfası</h1>

    @Html.Label("Mesaj ID")
    @Html.TextBoxFor(x=>x.MessageID, new{@class = "form-control"})
    <br />
    @Html.Label("Mesaj Konusu")
    @Html.TextBoxFor(x=>x.Subject, new{@class = "form-control"})
    <br />
    @Html.Label("Durum")
    @Html.DropDownListFor(x => x.MessageStatus, new List<SelectListItem>
       { new SelectListItem{Text="Aktif", Value="True"},
         new SelectListItem{Text="Pasif", Value="False"}},new{@class = "form-control"})
    <br />
    @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(x=>x.MessageDetails,15,3, new{@class = "form-control"})
    <br />
    <a href="~/Message/InBox" class="btn btn-success"> Mesajlara Dön </a>


