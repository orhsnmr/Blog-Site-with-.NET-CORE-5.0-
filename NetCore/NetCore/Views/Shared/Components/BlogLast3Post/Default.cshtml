@using EntityLayer.Concrete
@model List<Blog>
<div class="tech-btm">
    <h3>Son Postlar</h3>

    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="#">
                    <img src="@item.BlogImage" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">
                <h5>

                    <a href="single.html"><font color="White">@item.BlogTitle</font></a>
                    
                </h5>
                <h5>
                    <a href="single.html">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,80).LastIndexOf(" "))...</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate)
                    .ToString(" dd-MMMM-yyyy"))
                    </span>
                </div>
            </div>
        </div>
    }
</div>